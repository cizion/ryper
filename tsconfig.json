{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "dist",
    "declaration": true,
    // "target": "es2019",
    // "module": "es2019",
    "noImplicitAny": true,
    "strict": true,
    "lib": ["es2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
