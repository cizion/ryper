{
  "compilerOptions": {
    "jsx": "react",
    "downlevelIteration": true,
    "declarationDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
    // "target": "es2015",
    // "module": "es2015",
    "lib": ["ES2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
